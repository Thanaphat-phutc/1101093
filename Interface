<script>
    let currentTotalValue = 0.00;
    let detectionTimer = null;
    const VALUE_PER_ITEM = 0.70;

    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠ (‡πÉ‡∏ä‡πâ TranslateX ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡πÄ‡∏Å‡∏¥‡∏î Animation)
    function navigate(screenId) {
        document.querySelectorAll('.screen').forEach(screen => {
            if (screen.id === screenId) {
                screen.classList.add('show');
            } else {
                screen.classList.remove('show');
            }
        });
    }

    // ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ò‡∏∏‡∏£‡∏Å‡∏£‡∏£‡∏°‡πÅ‡∏•‡∏∞‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏´‡∏¢‡∏≠‡∏î‡∏Ç‡∏ß‡∏î
    function startTransaction() {
        currentTotalValue = 0.00;
        document.getElementById('item-count').textContent = '0';
        document.getElementById('total-value').textContent = '‡∏£‡∏ß‡∏°: 0.00 ‡∏ö‡∏≤‡∏ó';
        document.getElementById('processing-status').textContent = '‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏´‡∏¢‡∏≠‡∏î‡∏ö‡∏£‡∏£‡∏à‡∏∏‡∏†‡∏±‡∏ì‡∏ë‡πå‡πÉ‡∏ô‡∏ä‡πà‡∏≠‡∏á‡∏£‡∏±‡∏ö';
        
        navigate('processing-screen');
        
        if (detectionTimer) clearInterval(detectionTimer);
        
        // ‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏´‡∏¢‡∏≠‡∏î‡∏Ç‡∏ß‡∏î 3 ‡∏Ñ‡∏£‡∏±‡πâ‡∏á
        let count = 0;
        detectionTimer = setInterval(() => {
            if (count < 3) {
                // ‡∏à‡∏≥‡∏•‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö
                currentTotalValue += VALUE_PER_ITEM;
                count++;
                document.getElementById('item-count').textContent = count;
                document.getElementById('total-value').textContent = `‡∏£‡∏ß‡∏°: ${currentTotalValue.toFixed(2)} ‡∏ö‡∏≤‡∏ó`;
                document.getElementById('processing-status').textContent = '‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö...';
                if (count === 3) {
                    document.getElementById('processing-status').textContent = '‡∏ï‡∏£‡∏ß‡∏à‡∏à‡∏±‡∏ö‡∏Ñ‡∏£‡∏ö‡πÅ‡∏•‡πâ‡∏ß';
                }
            } else {
                clearInterval(detectionTimer);
            }
        }, 1200); 
    }
    
    // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏£‡∏∏‡∏õ‡∏£‡∏≤‡∏á‡∏ß‡∏±‡∏•‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏´‡∏ô‡πâ‡∏≤
    document.getElementById('reward-selection-screen').addEventListener('transitionend', function() {
        if (this.classList.contains('show')) {
            document.getElementById('reward-summary-value').textContent = currentTotalValue.toFixed(2) + ' ‡∏ö‡∏≤‡∏ó';
            document.getElementById('payment-status').textContent = currentTotalValue.toFixed(2) + ' ‡∏ö‡∏≤‡∏ó';
        }
    });

    // ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡πÅ‡∏™‡∏î‡∏á‡∏´‡∏ô‡πâ‡∏≤ Welcome ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÇ‡∏´‡∏•‡∏î
    document.addEventListener('DOMContentLoaded', () => {
        navigate('welcome-screen');
    });
</script>
